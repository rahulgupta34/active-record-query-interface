<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">No Of Order</th>
    </tr>
  </thead>
  <tbody>
  <% @all_employess.find_in_batches(batch_size:20, start:1, finish: 15) do |employees| %>
  <% employees.each do |employee| %>
    <tr>
      <th scope="row">  <%= employee.id %></th>
      <td> <%= employee.first_name %></td>
      <td> <%= employee.last_name %></td>
      <td> 
      <% if employee.id == 1  %>
            <%= employee.no_of_order-1 %>
         <% else %>
         <%= employee.no_of_order %>
      <% end %>
      </td>
    </tr>
   <% end %>
<% end %> 
  </tbody>
</table>


               
                      
               


